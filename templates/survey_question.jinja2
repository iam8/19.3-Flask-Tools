{# Template for survey question page. #}

{% extends "base.jinja2" %}

{% block title %}
    Survey Question
{% endblock title %}

{% block content %}

    {% for msg in get_flashed_messages() %}
        <p>{{ msg }}</p>
    {% endfor %}

    <h1>Question {{ qnum }}</h1>

    <form action="/answers/{{ qnum }}" method="POST">
        <p>{{ qtext }}</p>

        {% for choice in qchoices %}
            <input type="radio" name="response" value="{{ choice }}">
            {{ choice }}
            <br>
        {% endfor %}

        <button>Submit response</button>
    </form>

{% endblock content %}
